<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".ActividadPrincipal">

    <TextView
        android:id="@+id/txtEmergenciaPedida"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginStart="83dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="81dp"
        android:gravity="center"
        android:text="Emergencia Medica"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:textSize="28dp"
        app:layout_constraintBottom_toTopOf="@+id/divider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />



    <TextView
        android:id="@+id/txTiempoRescatista"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="102dp"
        android:layout_marginTop="45dp"

        android:layout_marginEnd="102dp"
        android:gravity="center"
        android:text="PARAMEDICOS: "
        android:textColor="#ffffff"
        android:textSize="28dp"
        app:layout_constraintBottom_toTopOf="@+id/imgFotoRescatista1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/divider" />

    <ImageView
        android:id="@+id/imgFotoRescatista1"
        android:layout_width="131dp"
        android:layout_height="200dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="44dp"
        android:scaleType="centerCrop"
        android:tag="0"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/txtNombreRescatista1"
        app:layout_constraintEnd_toStartOf="@+id/imgFotoRescatista2"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txTiempoRescatista" />

    <ImageButton
        android:id="@+id/imagetelefono"
        android:layout_width="46dp"
        android:layout_height="41dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="45dp"
        android:layout_marginEnd="28dp"
        android:background="@null"
        android:scaleType="centerCrop"
        android:src="@drawable/telefono"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/txTiempoRescatista"
        app:layout_constraintTop_toBottomOf="@+id/divider" />
    <ImageView
        android:id="@+id/imgFotoRescatista2"
        android:layout_width="131dp"
        android:layout_height="200dp"
        android:layout_marginStart="88dp"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="36dp"
        android:scaleType="centerCrop"
        android:tag="0"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/txtNombreRescatista2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imgFotoRescatista1"
        app:layout_constraintTop_toBottomOf="@+id/txTiempoRescatista" />

    <TextView
        android:id="@+id/txtNombreRescatista1"
        android:layout_width="138dp"
        android:layout_height="144dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="53dp"
        android:gravity="center"
        android:text=""
        android:textColor="#ffffff"
        android:textSize="28dp"
        app:layout_constraintBottom_toTopOf="@+id/btnFinalizarEmergencai"
        app:layout_constraintEnd_toStartOf="@+id/txtNombreRescatista2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgFotoRescatista1" />

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="12dp"
        android:background="#ffffff"
        app:layout_constraintBottom_toTopOf="@+id/txTiempoRescatista"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtEmergenciaPedida" />

    <TextView
        android:id="@+id/txtNombreRescatista2"
        android:layout_width="125dp"
        android:layout_height="150dp"
        android:layout_marginStart="76dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="36dp"
        android:layout_marginBottom="53dp"
        android:gravity="center"
        android:text=""
        android:textColor="#ffffff"
        android:textSize="28dp"
        app:layout_constraintBottom_toTopOf="@+id/btnFinalizarEmergencai"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/txtNombreRescatista1"
        app:layout_constraintTop_toBottomOf="@+id/imgFotoRescatista2" />

    <Button
        android:id="@+id/btnFinalizarEmergencai"
        android:layout_width="339dp"
        android:layout_height="49dp"
        android:layout_marginStart="36dp"
        android:layout_marginEnd="36dp"
        android:layout_marginBottom="37dp"
        android:background="@drawable/botonredondeado"
        android:text="Finalizar Emergencia"
        android:textColor="@color/White"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtNombreRescatista2" />
</androidx.constraintlayout.widget.ConstraintLayout>